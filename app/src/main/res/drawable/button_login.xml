<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- normal -->
    <item tools:ignore="StateListReachable">
        <shape>
            <solid android:color="?attr/title_color"/>
            <corners android:radius="2dp" />
            <padding
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?attr/title_color"/>
            <corners android:radius="2dp" />
            <padding
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- focused -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="?attr/title_color"/>
            <corners android:radius="2dp" />
            <padding
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

</selector>